---
import { Image } from "astro:assets";
const { src } = Astro.props;
---

<div class="relative group overflow-hidden">
  <Image src={src} alt="img1" />
  <div
    class="absolute top-0 -left-full size-full p-4 transition-all duration-500 group-hover:left-0 text-white"
  >
    <div class="size-full p-4 flex items-end bg-black bg-opacity-60">
      <slot />
    </div>
  </div>
</div>
